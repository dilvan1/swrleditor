<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='resources'
		type='br.usp.icmc.dilvan.swrlEditor.client.resources.Resources' />
	
	<g:DockLayoutPanel unit="PX">

		<g:north size="50">
			<g:Label horizontalAlignment="ALIGN_CENTER" text="Filters"
				styleName='{resources.swrleditor.titleViews}' />
		</g:north>


		
		<g:center>
			<g:SplitLayoutPanel width="100%" height="100%">
				<g:west size="400.0">
					<g:SimplePanel width="100%" height="100%" ui:field="pnlProperties">

					</g:SimplePanel>
				</g:west>
				<g:center>
					<g:VerticalPanel width="100%" height="100%"
						spacing="2">
						<g:CaptionPanel captionText="Create a Filter">
							<g:Grid>
								<g:row>
									<g:customCell>
										<g:Label text="Type:" wordWrap="false"
											horizontalAlignment="ALIGN_RIGHT" />
									</g:customCell>
									<g:customCell>
										<g:ListBox ui:field="listTypes" />
									</g:customCell>
								</g:row>
								<g:row>
									<g:customCell>
										<g:Label text="Rule Part:" wordWrap="false"
											horizontalAlignment="ALIGN_RIGHT" />
									</g:customCell>
									<g:customCell>
										<g:ListBox ui:field="listParts" />
									</g:customCell>
								</g:row>
								<g:row>
									<g:customCell>
										<g:Label text="Query:" wordWrap="false"
											horizontalAlignment="ALIGN_RIGHT" />
									</g:customCell>
									<g:customCell>
										<g:SuggestBox ui:field="txtFilter" width="242px" />
									</g:customCell>
								</g:row>
								<g:row>
									<g:customCell>
										<g:Label text=" " />
									</g:customCell>
									<g:customCell>
										<g:Button text="Add Filter" ui:field="btnAddFilter">New Button</g:Button>
									</g:customCell>
								</g:row>
							</g:Grid>
						</g:CaptionPanel>

						<g:Cell height="100%" width="100%" horizontalAlignment="ALIGN_RIGHT">
							<g:CaptionPanel width="100%">
								<g:VerticalPanel width="100%">
									<g:CaptionPanel>
										<g:HorizontalPanel>
											<g:Button ui:field="btnFilterRun" text="Filter Run" />
										</g:HorizontalPanel>
									</g:CaptionPanel>
									<g:ScrollPanel height="100%" width="100%">
										<g:VerticalPanel ui:field="listFilters">

										</g:VerticalPanel>
									</g:ScrollPanel>
								</g:VerticalPanel>
							</g:CaptionPanel>
						</g:Cell>


					</g:VerticalPanel>
				</g:center>
			</g:SplitLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>

</ui:UiBinder> 