<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.panel {
			background-color: white;
			border: 1px solid #EEEEEE;
			margin-bottom: 5px;
		}
		.header {
			font-weight: bold;
			background-color: red;
		}
	</ui:style>

	<g:FlowPanel styleName="{style.panel}" width="100%" height="20px">
		<g:DisclosurePanel ui:field="panelContent" width="100%" open="true">
			<g:header></g:header>
			<g:FlowPanel width="97%" height="" ui:field="contentRule"/>
		</g:DisclosurePanel>
		<g:HorizontalPanel spacing="5" ui:field="panelButtons">
			<g:Button text="Edit Rule" ui:field="btnEditRule"/>
			<g:Button text="Duplicate and Edit" ui:field="btnDuplicateRule"/>
			<g:Button text="Delete" ui:field="btnDeleteRule"/>
			<g:Button text="Similar rules" ui:field="btnSimilarRule"/>
		</g:HorizontalPanel>
	</g:FlowPanel>
</ui:UiBinder>
