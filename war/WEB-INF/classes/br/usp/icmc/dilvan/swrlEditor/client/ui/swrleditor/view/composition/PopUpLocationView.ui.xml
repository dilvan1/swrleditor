<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' 
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.panel {
			background-color: white;
		}
		.bold {
			font-weight: bold;
		}
	</ui:style>

	<g:FlowPanel styleName="{style.panel}" height="85" width="">
		<g:InlineLabel text="You want add " width="100px"/>
		<g:InlineLabel text="[nome]" ui:field="lblItemName" styleName="{style.bold}"/>
		<g:InlineLabel text=" in:"/>
		<g:HorizontalPanel spacing="10">
			<g:Button text="Antecedent" ui:field="btnAntecedent">New Button</g:Button>
			<g:Button text="Consequent" ui:field="btnConsequent">New Button</g:Button>
		</g:HorizontalPanel>
		<g:Label text="Cancel" ui:field="lblCancel" styleName="mlink"/>
	</g:FlowPanel>
</ui:UiBinder>